<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
"-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
"http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>

 <vendor>OpenMandriva</vendor>
 <vendor_url>https://www.openmandriva.org/</vendor_url>

 <action id="org.openmandriva.drakrpm-update.pkexec.run">
    <_description>Run OpenMandriva Updater</_description>
    <_message>Authentication is required to run OpenMandriva Updater</_message>
    <icon_name>rpmdrake</icon_name>
    <defaults>
     <allow_any>no</allow_any>
     <allow_inactive>no</allow_inactive>
     <allow_active>auth_self_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/libexec/drakrpm-update</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
 </action>
</policyconfig>
